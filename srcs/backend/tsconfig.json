{
	"compilerOptions": {
		"target": "ESNEXT",
		"module": "NodeNext",
		"moduleResolution": "nodenext", // Add this line
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}